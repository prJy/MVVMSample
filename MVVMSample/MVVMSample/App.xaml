<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMSample.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="StackLayout" x:Key="PageLayout">
                <Setter Property="Padding" Value="20"/>
            </Style>
            <Style TargetType="StackLayout" x:Key="LinhaGridColuna">
                <Setter Property="Orientation" Value="Horizontal"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            </Style>
            <Style TargetType="StackLayout" x:Key="ColunaGridLayout">
                <Setter Property="Orientation" Value="Vertical"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            </Style>
            <Style TargetType="Button" x:Key="WhiteTextButton">
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <Style TargetType="Button" x:Key="SaveButton" BasedOn="{StaticResource WhiteTextButton}">
                <Setter Property="BackgroundColor" Value="Blue"/>
            </Style>
            <Style TargetType="Button" x:Key="DeleteButton" BasedOn="{StaticResource WhiteTextButton}">
                <Setter Property="BackgroundColor" Value="Red"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>